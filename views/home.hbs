<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="leftside">
                <div class="form-group">
                    <label for="entry-list">Items</label>
                    <ul class="list-group">
                        {{#each entry}}
                            <li class="list-group-item"><a href="/entries/{{this._id}}">{{this.title}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9 col-md-offset-3 right">
            <div class="rightside">
                {{> entry-form}}
            </div>
        </div>
    </div>
</div>