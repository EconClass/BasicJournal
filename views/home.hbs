<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="leftside">
                <div class="form-group">

                    <h2><label for="entry-list">Journal Entries</label></h2>
                    <ul class="list-group">
                        {{#each entries}}
                        <li class="list-group-item"><a href="/entries/{{this._id}}">{{this.title}}</a></li>
                        {{/each}}
                        <li class="list-group-item"><a href="/entries/new">New Entry</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9 col-md-offset-3 right">
            <div class="rightside">
                <h1 align="center">Today's Headlines</h1>
                <div class="card-columns">
                    {{#each news}}
                        <div class="card text-white bg-info mb-3" >
                            <a href="{{this.url}}"><img class="card-img-top" src="{{this.urlToImage}}" alt="Card image cap"></a>
                            <h4 class="card-title">{{this.title}}</h4>
                            <h6 class="card-text">{{this.author}}</h6>
                            <a href="/notes/new" class="btn btn-primary">Take Notes</a>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>